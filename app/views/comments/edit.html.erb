<div class="max-w-3xl mx-auto">
  <div class="card bg-base-300 shadow-xl">
    <div class="card-body">
      <h1 class="text-3xl font-bold mb-6">Edit Your Comment</h1>

      <form action="/cocktail_recipes/<%= @cocktail_recipe_id %>/comments/<%= @comment.id %>" method="POST">
        <input type="hidden" id="hidden" name="_method" value="PATCH">

        <div class="form-control mb-6">
          <label class="label">
            <span class="label-text text-lg font-semibold">Comment Content</span>
          </label>
          <textarea id="comment_content" name="comment[content]" class="textarea textarea-bordered h-32 w-full" required><%= @comment.content %></textarea>
        </div>

        <div class="flex gap-4 mb-4">
          <button type="submit" class="btn btn-primary flex-1">Save Changes</button>
          <a href="/cocktail_recipes/<%= @cocktail_recipe_id %>" class="btn btn-outline">Cancel</a>
        </div>
      </form>

      <div class="divider"></div>

      <form action="/cocktail_recipes/<%= @cocktail_recipe_id %>/comments/<%= @comment.id %>/delete" method="POST">
        <input type="hidden" id="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-error w-full" onclick="return confirm('Are you sure you want to delete this comment?')">Delete Comment</button>
      </form>
    </div>
  </div>
</div>