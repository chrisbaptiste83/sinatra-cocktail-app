<div class="jumbotron text-white w-50" style="background-color: rgba(0,0,0, 0.90);" >
<a href="/cocktail_recipes/<%=@cocktail_recipe_id%>"><button type="button" class="btn btn-link disabled">Back to Cocktail</button></a>
    <br><br>
    <div style="text-align: center">
      <h4>Edit Your Comment</h4>
    </div><br>
    <div class="container" style="width:60%;">
      <form class="form-center" action="/cocktail_recipes/<%=@cocktail_recipe_id%>/comments/<%=@comment.id%>" method="POST">
        <input type="hidden" id="hidden" name="_method" value="PATCH">
        <div class="form-group">
          <label for="comment_content">Content</label>
          <input type="text" id="comment_content" class="form-control" name="comment[content]" value="<%= @comment.content %>"></input>
        </div>
        <div style="text-align: center">
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form><br>
      <form action="/cocktail_recipes/<%=@cocktail_recipe_id%>/comments/<%=@comment.id%>/delete" method="POST">
        <input type="hidden" id="hidden" name="_method" value="DELETE">
        <div style="text-align: center">
          <button type="submit" class="btn btn-warning">Delete Comment</button>
        </div>
      </form>
    </div> 
    </div>