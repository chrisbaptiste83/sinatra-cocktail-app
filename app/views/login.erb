<div class="max-w-md mx-auto">
  <div class="card bg-base-300 shadow-xl">
    <div class="card-body">
      <h1 class="text-4xl font-bold mb-2 text-center">Log In</h1>
      <p class="text-center opacity-80 mb-6">Enter your credentials to access your account</p>

      <form method="POST" action="/login">
        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Username</span>
          </label>
          <input type="text" name="username" placeholder="Enter your username" class="input input-bordered w-full" required>
        </div>

        <div class="form-control mb-6">
          <label class="label">
            <span class="label-text text-lg font-semibold">Password</span>
          </label>
          <input type="password" name="password" placeholder="Enter your password" class="input input-bordered w-full" required>
        </div>

        <button type="submit" class="btn btn-primary w-full mb-4">Log In</button>
      </form>

      <div class="divider">OR</div>

      <p class="text-center">
        Don't have an account? <a href="/signup" class="link link-primary font-semibold">Sign Up</a>
      </p>
    </div>
  </div>
</div>