<div class="max-w-md mx-auto">
  <div class="card bg-base-300 shadow-xl">
    <div class="card-body">
      <h1 class="text-4xl font-bold mb-2 text-center">Join Us</h1>
      <p class="text-center opacity-80 mb-6">Create your account to start sharing cocktail recipes</p>

      <form action="/signup" method="POST">
        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Username</span>
          </label>
          <input type="text" name="username" placeholder="Choose a username" class="input input-bordered w-full" required>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Email</span>
          </label>
          <input type="email" name="email" placeholder="your.email@example.com" class="input input-bordered w-full" required>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Password</span>
          </label>
          <input type="password" name="password" placeholder="Create a password" class="input input-bordered w-full" required>
        </div>

        <div class="form-control mb-6">
          <label class="label">
            <span class="label-text text-lg font-semibold">Confirm Password</span>
          </label>
          <input type="password" name="password_confirmation" placeholder="Confirm your password" class="input input-bordered w-full" required>
        </div>

        <button type="submit" class="btn btn-primary w-full mb-4">Sign Up</button>
      </form>

      <div class="divider">OR</div>

      <p class="text-center">
        Already have an account? <a href="/login" class="link link-primary font-semibold">Log In</a>
      </p>
    </div>
  </div>
</div>
      
  
