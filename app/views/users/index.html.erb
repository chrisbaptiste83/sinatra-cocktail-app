<div class="jumbotron text-white w-50" style="background-color: rgba(0,0,0, 0.90);" >   
  <p><h2>Hello <%=@user.username%>, what would you like to do?</h2></p>
  <br><h3><a href="/cocktail_recipes/new" style="color: #f5f5f5">Create a Cocktail</a></h3></br> 
  <p><img src="/images/cocktail_materials.png" alt="image" style="width: 150px"></p><br> 
  <br><h3><a href="/cocktail_recipes" style="color: #f5f5f5">View All Cocktail Recipes</a></h3></br> 
  <p><img src="/images/cocktails_animation.jpg" alt="image" style="width: 200px"></p><br>
</div> 

<div class="jumbotron text-white w-50" style="background-color: rgba(0,0,0, 0.90);" > 
  <p><h2>Newest Cocktail:</h2></p><br>  
  <h2><a href="/cocktail_recipes/<%=@cocktail_recipe.id%>"><%=@cocktail_recipe.cocktail_name%></h2></a></br> 
  <h5><%=@cocktail_recipe.description%></h5></br> 
  <p><img src="<%=@cocktail_recipe.image_url%>" alt="image" style="width: 220px"></p><br> 
  <p><h5>Created on: <%= @cocktail_recipe.created_at_date%></h5></p><br>  
</div> 

<div class="jumbotron text-white w-50" style="background-color: rgba(0,0,0, 0.90);" > 
  <p><h2>Cocktail Of The Day:</h2></p><br>  
  <h2><a href="/cocktail_recipes/<%=@random_cocktail_recipe.id%>"><%=@random_cocktail_recipe.cocktail_name%></h2></a></br> 
  <h5><%=@random_cocktail_recipe.description%></h5></br> 
  <p><img src="<%=@random_cocktail_recipe.image_url%>" alt="image" style="width: 220px"></p><br> 
  <p><h5>Created on: <%= @random_cocktail_recipe.created_at_date%></h5></p><br>  
</div>

<div class="jumbotron text-white w-50" style="background-color: rgba(0,0,0, 0.90);" > 
  <p><h2>Your Cocktails:</h2></p> 
    <% @user.cocktail_recipes.each do |cocktail_recipe| %> 
      <div class="jumbotron text-white w-50" style="background-color: rgba(0,0,0, 0.90);" >  
            <br><h2> <a href="/cocktail_recipes/<%=cocktail_recipe.id%>" style="color: #f5f5f5">
            <%=cocktail_recipe.cocktail_name%></a></h2></br> 
            <h5><%=cocktail_recipe.description%></h5></br> 
            <p><img src="<%= cocktail_recipe.image_url%>" alt="image" style="width: 220px"></p><br> 
            <p><h5>Created on: <%= cocktail_recipe.created_at_date%></h5></p><br>  
      </div> 
    <% end %> 
</div>    
 
 
     
