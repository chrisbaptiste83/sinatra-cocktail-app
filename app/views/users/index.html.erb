<div class="max-w-7xl mx-auto">
  <div class="text-center mb-8">
    <h1 class="text-5xl font-bold mb-2">Welcome, <%= @user.username %>!</h1>
    <p class="text-lg opacity-80">What would you like to do today?</p>
  </div>

  <div class="grid md:grid-cols-2 gap-6 mb-8">
    <a href="/cocktail_recipes/new" class="card bg-base-300 shadow-xl hover:shadow-2xl transition-all hover:scale-105">
      <div class="card-body items-center text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
        <h2 class="card-title text-2xl">Create a Cocktail</h2>
        <p>Share your favorite recipe</p>
      </div>
    </a>

    <a href="/cocktail_recipes" class="card bg-base-300 shadow-xl hover:shadow-2xl transition-all hover:scale-105">
      <div class="card-body items-center text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-secondary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>
        <h2 class="card-title text-2xl">View All Cocktails</h2>
        <p>Browse the collection</p>
      </div>
    </a>
  </div>

  <div class="grid md:grid-cols-2 gap-6 mb-8">
    <div class="card bg-base-300 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
          Newest Cocktail
        </h2>
        <a href="/cocktail_recipes/<%= @cocktail_recipe.id %>" class="hover:text-primary transition-colors">
          <h3 class="text-xl font-bold mb-2"><%= @cocktail_recipe.cocktail_name %></h3>
        </a>
        <p class="opacity-80 mb-4"><%= @cocktail_recipe.description %></p>
        <% if @cocktail_recipe.image_url && !@cocktail_recipe.image_url.empty? %>
          <figure class="mb-2">
            <img src="<%= @cocktail_recipe.image_url %>" alt="<%= @cocktail_recipe.cocktail_name %>" class="rounded-xl w-full h-48 object-cover">
          </figure>
        <% end %>
        <div class="text-sm opacity-70">Created on <%= @cocktail_recipe.created_at_date %></div>
      </div>
    </div>

    <div class="card bg-base-300 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
          Cocktail Of The Day
        </h2>
        <a href="/cocktail_recipes/<%= @random_cocktail_recipe.id %>" class="hover:text-primary transition-colors">
          <h3 class="text-xl font-bold mb-2"><%= @random_cocktail_recipe.cocktail_name %></h3>
        </a>
        <p class="opacity-80 mb-4"><%= @random_cocktail_recipe.description %></p>
        <% if @random_cocktail_recipe.image_url && !@random_cocktail_recipe.image_url.empty? %>
          <figure class="mb-2">
            <img src="<%= @random_cocktail_recipe.image_url %>" alt="<%= @random_cocktail_recipe.cocktail_name %>" class="rounded-xl w-full h-48 object-cover">
          </figure>
        <% end %>
        <div class="text-sm opacity-70">Created on <%= @random_cocktail_recipe.created_at_date %></div>
      </div>
    </div>
  </div>

  <div class="card bg-base-300 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-3xl mb-6">Your Cocktails</h2>
      <% if @user.cocktail_recipes.empty? %>
        <div class="text-center py-8">
          <p class="text-xl opacity-70 mb-4">You haven't created any cocktails yet</p>
          <a href="/cocktail_recipes/new" class="btn btn-primary">Create Your First Cocktail</a>
        </div>
      <% else %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @user.cocktail_recipes.each do |cocktail_recipe| %>
            <div class="card bg-base-200 shadow-lg hover:shadow-xl transition-shadow">
              <figure class="px-4 pt-4">
                <% if cocktail_recipe.image_url && !cocktail_recipe.image_url.empty? %>
                  <img src="<%= cocktail_recipe.image_url %>" alt="<%= cocktail_recipe.cocktail_name %>" class="rounded-xl w-full h-40 object-cover">
                <% else %>
                  <div class="rounded-xl w-full h-40 bg-base-300 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>
                  </div>
                <% end %>
              </figure>
              <div class="card-body p-4">
                <h3 class="card-title text-lg">
                  <a href="/cocktail_recipes/<%= cocktail_recipe.id %>" class="hover:text-primary transition-colors">
                    <%= cocktail_recipe.cocktail_name %>
                  </a>
                </h3>
                <p class="text-sm opacity-80 line-clamp-2"><%= cocktail_recipe.description %></p>
                <div class="text-xs opacity-70 mt-2">Created <%= cocktail_recipe.created_at_date %></div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    
 
 
     
