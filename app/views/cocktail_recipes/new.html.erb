<div class="max-w-3xl mx-auto">
  <div class="card bg-base-300 shadow-xl">
    <div class="card-body">
      <h1 class="text-4xl font-bold mb-6">Create a New Cocktail Recipe</h1>

      <form action="/cocktail_recipes" method="POST">
        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Cocktail Name</span>
          </label>
          <input type="text" name="cocktail_name" id="cocktail_name" class="input input-bordered w-full" placeholder="e.g., Margarita" required>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Description</span>
          </label>
          <textarea name="description" id="description" class="textarea textarea-bordered h-24 w-full" placeholder="A brief description of your cocktail..."></textarea>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Image URL</span>
          </label>
          <input type="text" name="image_url" id="image_url" class="input input-bordered w-full" placeholder="https://example.com/image.jpg">
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Ingredients</span>
          </label>
          <textarea name="ingredients" id="ingredients" class="textarea textarea-bordered h-32 w-full" placeholder="List all ingredients..." required></textarea>
        </div>

        <div class="form-control mb-6">
          <label class="label">
            <span class="label-text text-lg font-semibold">Instructions</span>
          </label>
          <textarea name="instructions" id="instructions" class="textarea textarea-bordered h-32 w-full" placeholder="Step-by-step instructions..." required></textarea>
        </div>

        <div class="flex gap-4">
          <button type="submit" class="btn btn-primary flex-1">Create Cocktail Recipe</button>
          <a href="/cocktail_recipes" class="btn btn-outline">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>


  

   