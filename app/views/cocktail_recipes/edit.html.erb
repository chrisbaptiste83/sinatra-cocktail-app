<div class="max-w-3xl mx-auto">
  <div class="card bg-base-300 shadow-xl">
    <div class="card-body">
      <h1 class="text-4xl font-bold mb-6">Edit Cocktail Recipe</h1>

      <form method="POST" action="/cocktail_recipes/<%= @cocktail_recipe.id %>">
        <input id="hidden" type="hidden" name="_method" value="PATCH">

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Cocktail Name</span>
          </label>
          <input type="text" name="cocktail_name" id="cocktail_name" value="<%= @cocktail_recipe.cocktail_name %>" class="input input-bordered w-full" required>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Description</span>
          </label>
          <textarea name="description" id="description" class="textarea textarea-bordered h-24 w-full"><%= @cocktail_recipe.description %></textarea>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Image URL</span>
          </label>
          <input type="text" name="image_url" id="image_url" value="<%= @cocktail_recipe.image_url %>" class="input input-bordered w-full">
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text text-lg font-semibold">Ingredients</span>
          </label>
          <textarea name="ingredients" id="ingredients" class="textarea textarea-bordered h-32 w-full" required><%= @cocktail_recipe.ingredients %></textarea>
        </div>

        <div class="form-control mb-6">
          <label class="label">
            <span class="label-text text-lg font-semibold">Instructions</span>
          </label>
          <textarea name="instructions" id="instructions" class="textarea textarea-bordered h-32 w-full" required><%= @cocktail_recipe.instructions %></textarea>
        </div>

        <div class="flex gap-4 mb-4">
          <button type="submit" class="btn btn-primary flex-1">Save Changes</button>
          <a href="/cocktail_recipes/<%= @cocktail_recipe.id %>" class="btn btn-outline">Cancel</a>
        </div>
      </form>

      <div class="divider"></div>

      <form method="POST" action="/cocktail_recipes/<%= @cocktail_recipe.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-error w-full" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete Cocktail Recipe</button>
      </form>
    </div>
  </div>
</div>  



      